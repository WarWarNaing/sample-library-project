
@model DAL.Model.Book

<div class="card">
    <div class="card-header"><h3 class="text-center font-weight-light my-6">Add New Book</h3></div>
    <div class="card-body">
        <form id="ModuleForm" method="Post">
            <div class="row mb-3">
                <div class="col-md-12">
                    <div id="dvPreview">
                        @{
                            if (Model.Photo != null)
                            {
                                foreach (var image in Model.Photo.Split('_'))
                                {
                                    if (image != "")
                                    {
                                        <img src="@image" style="width: 80px; height: 80px;border-radius:10px" />
                                    }
                                }
                            }
                        }
                    </div>
                    <input type="file" multiple id="filearticle" class="form-control mt-20" name="" accept="image/jpeg, image/png" onchange="ShowImagePreviewArticle(this)" />
                    <input type="hidden" name="Photo" id="photo_article" value="@Model.Photo" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Book Name</label>
                    <input class="form-control" id="bookName" value="@Model.BookName" name="BookName" type="text" placeholder="Enter Book Name" required />
                    @Html.HiddenFor(x => x.BookId)
                    @Html.HiddenFor(x => x.IsAvailable)
                </div>
                <div class="col-md-6">
                    <label for="phone">Quantity</label>
                    <input class="form-control" id="quantity" value="@Model.Quantity" name="Quantity" type="number" placeholder="Enter Book Quantity" required />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Book Category</label>
                    <select name="" id="DD_category" class="form-control" required style="appearance: auto !important">
                        <option value="">-------Select Category-------</option>
                    </select>
                    <input type="hidden" id="categoryId" name="CategoryId" value="@Model.CategoryId" />
                    <input type="hidden" id="categoryName" name="CategoryName" value="@Model.CategoryName" />
                </div>
                <div class="col-md-6">
                    <label>Author</label>
                    <select name="" id="DD_author" class="form-control" required style="appearance: auto !important">
                        <option value="">-------Select Author-------</option>
                    </select>
                    <input type="hidden" id="authorId" name="AuthorId" value="@Model.AuthorId" />
                    <input type="hidden" id="authorName" name="AuthorName" value="@Model.AuthorName" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="phone">Book Price</label>
                    <input class="form-control" id="bookPrice" value="@Model.BookPrice" name="BookPrice" type="number" placeholder="Enter Book Price" required />
                </div>
                <div class="col-md-6">
                    <label for="phone">Book Rent Price</label>
                    <input class="form-control" id="rentPrice" value="@Model.RentPrice" name="RentPrice" type="number" placeholder="Enter Book rent price" required />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    @if (@Model.ReachDate != null)
                    {
                        <label>Book Reach Date</label><span class="text-danger">*</span>
                        <div id="datepicker" class="input-group date" data-date-format="mm-dd-yyyy">
                            <input id="reachDate" class="form-control" type="text" name="ReachDate" data-date-format="mm-dd-yyyy" value="@Model.ReachDate" />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    }
                    else
                    {
                        <label>Book Reach Date</label><span class="text-danger">*</span>
                        <div id="datepicker" class="input-group date" data-date-format="mm-dd-yyyy">
                            <input class="form-control" type="text" id="DOBform" name="ReachDate" readonly />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    }
                </div>
            </div>
            <div class="row card-footer text-center py-3" style="padding-right:0px!important">
                <div class="col-md-12">
                    <button class="btn btn-custom btn-block" type="submit" style="float:right;margin-left:10px;">Save Book</button>
                    <a class="btn btn-default btn-block" data-dismiss="modal" style="color:white;background-color:darkgray;float:right;" onclick="btnClose()">Close</a>
                </div>
            </div>
        </form>
    </div>
</div>